{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"outDir": "./dist",

		"strict": true,

		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts"]
}